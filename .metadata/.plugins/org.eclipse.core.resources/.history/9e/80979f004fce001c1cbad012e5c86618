package model;

import exeptions.TerritorioJaPossuiDono;

public class Companhia extends Tile{
	private Player proprietario;
	private String nome;
	private int valor;
	private int multiplicadorDoDado;
	
	
	public Companhia(String s, int nv, int pos, int mult){
		super(pos);
		nome = s;
		proprietario = null;
		valor = nv;
		multiplicadorDoDado = mult;
	}
	
	public void setNovoProprietario(Player novoPropritario) throws TerritorioJaPossuiDono {
		if(proprietario != null) {
			throw new TerritorioJaPossuiDono("Est√° tentando settar novo dono para territorio que ja possui dono.");
		}
		proprietario = novoPropritario;
	}
	
	public void venderParaOBanco() {
		proprietario = null;
	}
	
	private int calculaValorAluguel(int somaDosDados) { //valor a cobrar do player que cair nesa Companhia
		return multiplicadorDoDado * somaDosDados;
	}
	
	public voi cobrar(Player dono, Player visitante) {
		
		//pegar o valor dos dados do visitante que caiu naquela casa
		//calculaValorAluguel(dado1+dado2);
		//
		return 0;
	}
	
}

